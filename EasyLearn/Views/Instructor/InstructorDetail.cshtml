@model EasyLearn.Models.DTOs.InstructorDTOs.InstructorResponseModel

@{
    //ViewBag.Title = "title";
    Layout = "_Layout";
}

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card" style="border-radius: 15px;">
                    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                         data-mdb-ripple-color="light">
                        <img src="~/uploads/images/profilePictures/@Model.Data.ProfilePicture"
                             style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid"
                             alt="Laptop" />
                        <a href="#!">
                            <div class="mask"></div>
                        </a>
                    </div>

                    <div class="card-body pb-0">

                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Name:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.FirstName @Model.Data.LastName</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Sex:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.Gender</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Email:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.Email</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Mobile Number:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.PhoneNumber</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Language:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.Language</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    Biography:
                                </div>
                                @*<p class="small text-muted">Rated 4.0/5</p>*@
                            </div>

                            <div>
                                <p><a href="#!" class="text-dark">@Model.Data.Biography</a></p>
                                @*<p class="small text-muted">Laptops</p>*@
                            </div>
                        </div>
                        
                    </div>


                    <hr class="my-0" />

                </div>
            </div>
        </div>
    </div>
</section>

