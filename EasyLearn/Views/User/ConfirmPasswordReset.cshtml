@using EasyLearn.Models.DTOs.UserDTOs;
@model UserResponseModel;
@{
    ViewData["Title"] = "Recover Password";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Dashboard") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Reset Password</h4>
                                        <p class="text-muted">Reset your password to EasyLearn.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <div class="alert alert-success mb-4" role="alert">
                                            Enter new Password !
                                        </div>
                                        <form class="" asp-controller="User" asp-action="UpdateUserPassword">
                                            <input name="Id" value="@Model.Data.Id" type="hidden" />

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label for="useremail">Password</label>
                                                <input type="password" class="form-control" id="useremail" name="password" placeholder="Enter email">
                                            </div>

                                            <div class="auth-form-group-custom mb-4">
                                                <i class="ri-mail-line auti-custom-input-icon"></i>
                                                <label for="useremail">Confirm Password</label>
                                                <input type="password" class="form-control" id="useremail" name="ConfirmPassword" placeholder="Enter email">
                                            </div>

                                            <div class="mt-4 text-center">
                                                <input class="btn btn-primary w-md waves-effect waves-light" value="Reset" type="submit" />
                                            </div>
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Don't have an account ? <a asp-controller="Student" asp-action="RegisterStudent" class="fw-medium text-primary"> Register </a> </p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> EasyLearn. Crafted with <i class="mdi mdi-heart text-danger"></i> by S3m1c0l0n
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>