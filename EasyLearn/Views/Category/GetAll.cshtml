@model EasyLearn.Models.DTOs.CategoryDTOs.CategoriesResponseModel

@{
    //ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm- 1">


        <div class="search-container-side">

            <!-- search box  -->
            <div class="search-container">
                <form asp-controller="Attendant" asp-action="GetByStaffId">
                    <input type="text" placeholder="Attendant Id.." name="staffId">
                    <button type="submit">
                        <i class="fa fa-search"></i> Search
                    </button>
                </form>
            </div>

            <!-- search box  -->
            <div class="search-container">
                <form asp-controller="Attendant" asp-action="GetByName">
                    <input type="text" placeholder="Attendant Name..." name="name">
                    <button type="submit">
                        <i class="fa fa-search"></i> Search
                    </button>
                </form>
            </div>

        </div>


    </div>
    <div class="col-sm-11">
        <h2>
            <a asp-action="Create">Create Category</a>
        </h2>
        <div class="table-responsive">

            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image path</th>
                        <th scope="col">Availability</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var serialNumber = 1;
                    }
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <th scope="row">@serialNumber </th>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.CategoryImage</td>
                            <td>@item.IsAvailable</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                            </td>
                            <td>
                                <a asp-action="DeletePreview" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                            </td>
                        </tr>

                        serialNumber++;
                    }


                </tbody>

            </table>
        </div>

    </div>
</div>