@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">

<head>

    <partial name="~/Views/Shared/_title_meta.cshtml"/>
    <partial name="~/Views/Shared/_head_css.cshtml"/>

</head>

<body data-topbar="dark">

    <!-- Begin page -->
    <div id="layout-wrapper">

        <partial name="~/Views/Shared/_topbar.cshtml"/>
        @if (User.FindFirst(ClaimTypes.Role)?.Value == "admin")
        {
            <partial name="~/Views/Shared/_sidebar.cshtml"/>
        }
        
        @if (User.FindFirst(ClaimTypes.Role)?.Value == "moderator")
        {
            <partial name="~/Views/Shared/_Instructorsidebar.cshtml"/>
        }
        

        @if (User.FindFirst(ClaimTypes.Role)?.Value == "instructor")
        {
            <partial name="~/Views/Shared/_Instructorsidebar.cshtml"/>
        }

        @if (User.FindFirst(ClaimTypes.Role)?.Value == "student")
        {
            <partial name="~/Views/Shared/_Instructorsidebar.cshtml"/>
        }

        @*This is the original sidebar located*@

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        @*<div class="main-content">*@
            <div class="page-content">
                <div class="container-fluid">

                    <partial name="~/Views/Shared/_page_title.cshtml"/>

                    @RenderBody()

               @* </div> <!-- container-fluid -->*@
            </div>
            <!-- End Page-content -->

            <partial name="~/Views/Shared/_footer.cshtml"/>

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    <partial name="~/Views/Shared/_right_sidebar.cshtml"/>

    @*@ Html.Partial("~/Views/Shared/_vendor_scripts.cshtml"/>*@

    @RenderSection("scripts", required: false)


</body>

</html>

