@using EasyLearn.Models.ViewModels;
@model GlobalSearchResultViewModel;


@{
    ViewBag.Title = "Product";
    ViewBag.pTitle = "Product";
    ViewBag.pageTitle = "Ecommerce";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ION Slider -->
<link href="~/assets/libs/ion-rangeslider/css/ion.rangeSlider.min.css" rel="stylesheet" type="text/css" />

<div class="row">

    @*<div class="col-xl-3 col-lg-4">
        <div class="card">
           *@

    <partial name="~/Views/Shared/_sideFilter.cshtml" />
@*
        </div>
    </div>
*@


    <!--Search result bar-->
    <div class="col-lg-9">
        <div class="card">
            <div class="card-body">
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <h5>Search Result...</h5>
                                @* <ol class="breadcrumb p-0 bg-transparent mb-2">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Fashion</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Clothing</a></li>
                                <li class="breadcrumb-item active">T-shirts</li>
                                </ol>
                                *@
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inline float-md-end">
                                <div class="search-box ms-2">
                                    <div class="position-relative">
                                        <input type="text" class="form-control rounded" placeholder="Search...">
                                        <i class="mdi mdi-magnify search-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <ul class="list-inline my-3 ecommerce-sortby-list">
                        <li class="list-inline-item"><span class="fw-medium font-family-secondary">Sort by:</span></li>
                        <li class="list-inline-item"><a href="#">Newest</a></li>
                        <li class="list-inline-item active"><a href="#">Courses</a></li>
                        <li class="list-inline-item"><a href="#">Discount</a></li>
                    </ul>

                    <div class="row g-0">


                        <!--For courses result-->
                        @if (Model.CoursesResponseModel.Data != null)
                        {

                            @foreach (var item in Model.CoursesResponseModel.Data)
                            {
                                <div class="col-xl-4 col-sm-6">
                                    <div class="product-box">
                                        <div class="product-img">
                                            <div class="product-ribbon badge bg-warning">
                                                Course
                                            </div>

                                            <div class="product-like">
                                                <a href="#">
                                                    <i class="mdi mdi-heart-outline"></i>
                                                </a>
                                            </div>
                                            @*<img src="~/assets/images/product/img-1.png" alt="img-1" class="img-fluid mx-auto d-block">*@
                                            <img src="/uploads/images/course/@item.CourseLogo" alt="img-1" class="img-fluid mx-auto d-block">
                                        </div>

                                        <div class="text-center">
                                            <p class="font-size-12 mb-1">@item.CourseDuration</p>
                                            <h5 class="font-size-15"><a asp-controller="Course" asp-action="GetById" asp-route-id="@item.Id" class="text-dark">@item.CourseLanguage</a></h5>

                                            <h5 class="mt-3 mb-0">&#x20A6 @item.Price</h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        }



                        <!--For Category result-->
                        @if (Model.CategoriesResponseModel.Data != null)
                        {


                            @foreach (var item in Model.CategoriesResponseModel.Data)
                            {
                                <div class="col-xl-4 col-sm-6">
                                    <div class="product-box">
                                        <div class="product-img">
                                            <div class="product-ribbon badge bg-warning">
                                                Category
                                            </div>

                                            <div class="product-like">
                                                <a href="#">
                                                    <i class="mdi mdi-heart-outline"></i>
                                                </a>
                                            </div>
                                            @*<img src="~/assets/images/product/img-1.png" alt="img-1" class="img-fluid mx-auto d-block">*@
                                            <img src="/uploads/images/categories/@item.CategoryImage" alt="img-1" class="img-fluid mx-auto d-block">
                                        </div>

                                        <div class="text-center">
                                            <p class="font-size-12 mb-1">@item.Name</p>
                                            <h5 class="font-size-15"><a asp-controller="Category" asp-action="GetById" asp-route-id="@item.Id" class="text-dark">@item.Description</a></h5>

                                            <h5 class="mt-3 mb-0">@item.Name</h5>
                                        </div>
                                    </div>
                                </div>
                            }

                        }

                        <!--For Instructor result-->
                        @if (Model.InstructorsResponseModel.Data != null)
                        {

                            @foreach (var item in Model.InstructorsResponseModel.Data)
                            {
                                <div class="col-xl-4 col-sm-6">
                                    <div class="product-box">
                                        <div class="product-img">
                                            <div class="product-ribbon badge bg-warning">
                                                Instructor
                                            </div>

                                            <div class="product-like">
                                                <a href="#">
                                                    <i class="mdi mdi-heart-outline"></i>
                                                </a>
                                            </div>
                                            @*<img src="~/assets/images/product/img-1.png" alt="img-1" class="img-fluid mx-auto d-block">*@
                                            <img src="/uploads/images/profilePictures/@item.ProfilePicture" alt="img-1" class="img-fluid mx-auto d-block">
                                        </div>

                                        <div class="text-center">
                                            <p class="font-size-12 mb-1">@item.FirstName</p>
                                            <h5 class="font-size-15"><a asp-controller="Category" asp-action="GetById" asp-route-id="@item.Id" class="text-dark">@item.Language</a></h5>

                                            <h5 class="mt-3 mb-0">@item.LastName</h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="row mt-4">
                        <div class="col-sm-6">
                            <div>
                                <p class="mb-sm-0 mt-2">Page <span class="fw-bold">2</span> Of <span class="fw-bold">113</span></p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="float-sm-end">
                                <ul class="pagination pagination-rounded mb-sm-0">
                                    <li class="page-item disabled">
                                        <a href="#" class="page-link"><i class="mdi mdi-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a href="#" class="page-link">1</a>
                                    </li>
                                    <li class="page-item active">
                                        <a href="#" class="page-link">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a href="#" class="page-link">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a href="#" class="page-link">4</a>
                                    </li>
                                    <li class="page-item">
                                        <a href="#" class="page-link">5</a>
                                    </li>
                                    <li class="page-item">
                                        <a href="#" class="page-link"><i class="mdi mdi-chevron-end"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
