@model EasyLearn.Models.DTOs.AdminDTOs.AdminsResponseModel

@{
    //ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm- 1">


        <div class="search-container-side">

            <!-- search box  -->
            <div class="search-container">
                <form asp-controller="Attendant" asp-action="GetByStaffId">
                    <input type="text" placeholder="Attendant Id.." name="staffId">
                    <button type="submit">
                        <i class="fa fa-search"></i> Search
                    </button>
                </form>
            </div>

            <!-- search box  -->
            <div class="search-container">
                <form asp-controller="Attendant" asp-action="GetByName">
                    <input type="text" placeholder="Attendant Name..." name="name">
                    <button type="submit">
                        <i class="fa fa-search"></i> Search
                    </button>
                </form>
            </div>

        </div>

        <div class="col-sm- 1">


            <div class="search-container-side">

                <!-- search box  -->
                <div class="search-container">
                    <form asp-controller="Attendant" asp-action="GetByStaffId">
                        <input type="text" placeholder="Attendant Id.." name="staffId">
                        <button type="submit">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </form>
                </div>

                <!-- search box  -->
                <div class="search-container">
                    <form asp-controller="Attendant" asp-action="GetByName">
                        <input type="text" placeholder="Attendant Name..." name="name">
                        <button type="submit">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </form>
                </div>

            </div>
        </div>


    </div>
    <div class="col-sm-11">
        <h2>
            <a asp-action="Create">Create Admin</a>
        </h2>
        <div class="table-responsive">

            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Student Status</th>
                        <th scope="col">Password</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var serialNumber = 1;
                    }
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <th scope="row">@serialNumber </th>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.Gender</td>
                            <td>@item.StudentshipStatus</td>
                            <td>@item.Password</td>
                          
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                            </td>
                            <td>
                                <a asp-action="DeletePreview" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                            <td>
                                <a asp-action="UpdateProfile" asp-route-id="@item.Id" class="btn btn-info">Profile</a>
                                <a asp-action="UpdateAddressDetail" asp-route-id="@item.Id" class="btn btn-info">Address</a>
                                <a asp-action="ListOfBankDetail" asp-route-id="@item.Id" class="btn btn-info">Bank</a>
                            </td>

                        </tr>

                        serialNumber++;
                    }


                </tbody>

            </table>
        </div>

    </div>
</div>